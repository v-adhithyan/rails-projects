<h1>New entry</h1>
<div class="container">
<%= simple_form_for Entry.new do |f| %>
<div class="form-group">
<%= f.input :date, placeholder: 'dd/mm/yyyy', error: 'Date is mandatory', class: 'form-control' %>
</div>
<div class="form-group">
<%= f.input :note, label: 'Diary entry' %>
</div>
<%= f.button :submit %>
<% end %>
</div>
<%= link_to 'Back', entries_path%>
